{
  "$schema": "./platformatic.db.schema.json",
  "server": {
    "hostname": "{PLT_MAIN_HOST}",
    "port": "{PLT_MAIN_PORT}",
    "logger": { "level": "{PLT_SERVER_LOGGER_LEVEL}" },
    "pluginTimeout": 0
  },
  "migrations": {
    "autoApply": false,
    "dir": "./migrations"
  },
  "core": {
    "connectionString": "{PLT_DB_CONNECTION_STRING}",
    "events": false,
    "schema": ["{PLT_SCHEMA_1}", "{PLT_SCHEMA_2}"]
  },
  "authorization": {
    "jwt": {
      "secret": "{PLT_JWT_SECRET}"
    }
  }
}
