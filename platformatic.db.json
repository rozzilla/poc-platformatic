{
  "$schema": "./platformatic.db.schema.json",
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    }
  },
  "db": {
    "connectionString": "{DATABASE_URL}",
    "graphql": true,
    "openapi": true
  },
  "plugin": {
    "path": "./index.ts",
    "typescript": {
      "outDir": "dist"
    }
  },
  "dashboard": false,
  "metrics": false,
  "types": {
    "autogenerate": true
  }
}
